<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tv_view1"
            android:layout_width="395dp"
            android:layout_height="0dp"
            android:text="@string/view_1_text"
            android:background="#fafafa"
            style="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_view2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_view2"
            android:layout_width="395dp"
            android:layout_height="0dp"
            android:text="@string/view_2_text"
            android:background="#e0e0e0"
            style="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="7dp" app:layout_constraintTop_toBottomOf="@+id/tv_view1"
            app:layout_constraintBottom_toTopOf="@+id/tv_view3"/>

    <TextView
            android:id="@+id/tv_view3"
            android:layout_width="395dp"
            android:layout_height="0dp"
            android:text="@string/view_3_text"
            android:background="#bdbdbd"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_view2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>